{
  "name": "nhx",
  "version": "0.0.2",
  "description": "Node.js Hybrid eXecutor (a `uvx` inspired tool)",
  "type": "commonjs",
  "bin": "dist/cli.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prepublishOnly": "npm run build && npm test",
    "build": "rm -rf dist && tsc -b",
    "postbuild": "chmod +x dist/cli.js",
    "pretest": "npm run build",
    "test": "node --import tsx --test",
    "test:watch": "npm test -- --watch"
  },
  "keywords": [
    "package-manager",
    "npm",
    "node",
    "cli",
    "uv",
    "uvx",
    "fast"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "json5": "^2.2.3",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/semver": "^7.7.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kolodny/nhx.git"
  },
  "bugs": {
    "url": "https://github.com/kolodny/nhx/issues"
  },
  "homepage": "https://github.com/kolodny/nhx#readme"
}